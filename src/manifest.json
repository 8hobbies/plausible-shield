{
  "manifest_version": 3,
  "background": {
    "{{chrome}}.service_worker": "src/background.ts",
    "{{firefox}}.scripts": ["src/background.ts"]
  },
  "minimum_chrome_version": "130",
  "options_page": "src/options.html",
  "permissions": ["storage", "scripting"],
  "optional_host_permissions": ["<all_urls>"]
}
