{
  "name": "plausible-shield",
  "description": "Automatically shield your browser from being tracked by Plausible from your websites",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "compile": "tsc",
    "format": "eslint --fix */**.tsx */**.ts *.mjs && prettier . --write",
    "lint": "eslint */**.tsx */**.ts *.mjs --report-unused-disable-directives --max-warnings 0 && prettier . --check && npm run compile",
    "dev": "vite",
    "test": "vitest run --coverage --typecheck",
    "build": "npm run compile && vite build"
  },
  "keywords": [
    "browser-extension"
  ],
  "author": "8 Hobbies, LLC dba GoodAddon",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/8hobbies/plausible-shield/issues"
  },
  "homepage": "https://www.goodaddon.com/plausible-shield/",
  "dependencies": {
    "@8hobbies/utils": "^4.1.0",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@fontsource/roboto": "^5.1.0",
    "@mui/material": "^6.1.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@8hobbies/eslint-conf-baseline": "^6.0.0",
    "@8hobbies/eslint-conf-react-baseline": "^3.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/chrome": "^0.0.280",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/validator": "^13.12.2",
    "@types/webextension-polyfill": "^0.12.1",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^2.1.4",
    "happy-dom": "^15.11.0",
    "prettier": "^3.3.3",
    "sass-embedded": "^1.80.6",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.13.0",
    "vite": "^5.4.10",
    "vite-plugin-web-extension": "^4.2.0",
    "vitest": "^2.1.4",
    "webextension-polyfill": "^0.12.0"
  }
}
